@model SampleCRUDAPPASPNETMVC.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger mb-4">Delete Employee</h1>

<hr class="my-4" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm rounded">
                <h3 class="text-center text-warning mb-4">Are you sure you want to delete this?</h3>
                <h4 class="text-center text-dark mb-3">Employee Details</h4>
                <hr />

                <!-- Employee Details Displayed Using Definition List -->
                <dl class="row">
                    <dt class="col-sm-4 text-dark">Employee Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Empname)</dd>

                    <dt class="col-sm-4 text-dark">Designation:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Designation)</dd>

                    <dt class="col-sm-4 text-dark">Grade:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Grade)</dd>

                    <dt class="col-sm-4 text-dark">Department ID:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DepId)</dd>

                    <dt class="col-sm-4 text-dark">Department Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Deptname)</dd>
                </dl>

                <!-- Confirmation Action -->
                <div class="text-center mt-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Portalid" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-lg px-4 py-2">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </div>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2 mt-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
